---
interface GearItem {
    category: string;
    name: string;
    model: string;
    description: string;
    image: string;
    affiliateLink: string;
}

const gear: GearItem[] = [
    {
        category: 'PC Setup',
        name: 'Gaming PC',
        model: 'Custom Build',
        description: 'High-performance gaming PC with RTX 3080 and Ryzen 9 5900X',
        image: 'https://m.media-amazon.com/images/I/71WwzQHxHhL._AC_SL1500_.jpg',
        affiliateLink: 'https://www.amazon.com/dp/B08KFS6THF'
    },
    {
        category: 'Audio',
        name: 'Microphone',
        model: 'Shure SM7B',
        description: 'Professional broadcast microphone for crystal clear voice quality',
        image: 'https://m.media-amazon.com/images/I/71V-DmhZkEL._AC_SL1500_.jpg',
        affiliateLink: 'https://www.amazon.com/dp/B0002E4Z8M'
    },
    {
        category: 'Video',
        name: 'Webcam',
        model: 'Logitech Brio',
        description: '4K webcam with HDR for high-quality streaming',
        image: 'https://m.media-amazon.com/images/I/61OQP2+yqML._AC_SL1500_.jpg',
        affiliateLink: 'https://www.amazon.com/dp/B01N5UOYC4'
    },
    {
        category: 'Lighting',
        name: 'Ring Light',
        model: 'Elgato Key Light',
        description: 'Professional LED ring light for perfect streaming lighting',
        image: 'https://m.media-amazon.com/images/I/71V-DmhZkEL._AC_SL1500_.jpg',
        affiliateLink: 'https://www.amazon.com/dp/B07L8G1H3H'
    }
];
---

<section id="gear" class="py-20 px-4 bg-gray-800">
    <div class="max-w-6xl mx-auto">
        <h2 class="text-2xl font-bold sm:text-3xl text-center mb-12">Streaming Gear</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {
                gear.map((item) => (
                    <a
                        href={item.affiliateLink}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="bg-gray-900 rounded-lg overflow-hidden hover:bg-gray-800 transition-colors no-underline"
                    >
                        <div class="aspect-w-16 aspect-h-9 max-w-[300px] mx-auto">
                            <img src={item.image} alt={item.name} class="object-cover w-full h-full" />
                        </div>
                        <div class="p-6">
                            <span class="inline-block px-3 py-1 text-sm bg-green-600 rounded-full mb-4">{item.category}</span>
                            <h3 class="text-xl font-semibold mb-2">{item.name}</h3>
                            <p class="text-green-400 mb-2">{item.model}</p>
                            <p class="text-gray-300">{item.description}</p>
                            <p class="mt-4 text-xs text-green-400">View on Amazon â†’</p>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</section>
